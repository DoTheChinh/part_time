<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_custom"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/distance_view_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_padding"
        android:paddingVertical="@dimen/distance_view_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_job_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="Job Title"
                android:textColor="@color/back_87"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_job_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="@dimen/distance_view_10"
                android:text="@string/option"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_view_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_job_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_view_10"
                android:text="Đà Nẵng"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_view_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_job_item_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_view_10"
                android:text="2 triệu"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_view_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_posted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_posted"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_job_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_view_10"
                android:layout_toRightOf="@id/tv_posted_date"
                android:text="12/10/2017"
                android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
