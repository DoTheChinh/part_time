<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaihuynh.part_timejob.RegisterAccountInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="8"
        android:padding="@dimen/activity_padding"
        android:background="@drawable/grey_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/account_info_title"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="@color/end_color"
            android:fontFamily="@font/iciel_cadena"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/distance_view_20"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_fullName_layout"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:textColorHint="@color/grey_54"
                android:layout_marginBottom="@dimen/distance_view_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_fullName"
                    android:drawablePadding="@dimen/distance_view_10"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/user"
                    android:textColor="@color/grey_600"
                    android:fontFamily="@font/linotte_semi_bold"
                    android:hint="@string/hint_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:textColorHint="@color/grey_54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_email"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="@dimen/distance_view_10"
                    android:textSize="18sp"
                    android:textColor="@color/grey_600"
                    android:fontFamily="@font/linotte_semi_bold"
                    android:hint="@string/hint_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_marginTop="@dimen/distance_view_20"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:textColorHint="@color/grey_54"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_password"
                    android:hint="@string/hint_password"
                    android:fontFamily="@font/linotte_semi_bold"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/distance_view_10"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_600"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey_54"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/confirm_password"
                    android:drawablePadding="@dimen/distance_view_10"
                    android:fontFamily="@font/linotte_semi_bold"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_600"
                    android:textSize="18sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_register_account"
                android:background="@drawable/next_button"
                android:layout_marginTop="@dimen/distance_view_30"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/distance_view_40"
                android:paddingRight="@dimen/distance_view_40"
                android:textColor="@color/white"
                android:fontFamily="@font/iciel_cadena"
                android:textSize="16sp"
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="@string/text1"
                android:fontFamily="@font/linotte_semi_bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_toLogin_register"
                android:text="@string/toLogin"
                android:layout_marginLeft="5dp"
                android:textColor="@color/end_color"
                android:textSize="16sp"
                android:fontFamily="@font/linotte_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
