<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaihuynh.part_timejob.JobListFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:elevation="@dimen/distance_view_20"
                    android:minHeight="@dimen/bottom_navigation"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:background="#5c9fd8ff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/iciel_cadena"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:text="1,111 việc làm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_arrange"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/arrangement"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/iciel_cadena"
                        android:textColor="@color/white"
                        android:background="@drawable/next_button"
                        android:layout_height="@dimen/distance_view_40" />

                    <Button
                        android:layout_toLeftOf="@id/btn_arrange"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_view_5"
                        android:text="@string/location"
                        android:textColor="@color/white"
                        android:background="@drawable/next_button"
                        android:fontFamily="@font/iciel_cadena"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/distance_view_40" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_jobs"
                    android:layout_below="@+id/relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

</FrameLayout>
