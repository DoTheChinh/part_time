<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_notification_item"
    app:cardElevation="@dimen/distance_view_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/distance_view_2"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/distance_view_10"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/distance_view_10">

        <ImageView
            android:id="@+id/img_notification_item"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/user_profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/distance_view_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content_notification_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Huỳnh Quang Thảo" />

            <TextView
                android:id="@+id/tv_time_notification_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 phút trước"
                android:textStyle="italic" />


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>