<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:fontFamily">@font/linotte_semi_bold</item>
        <item name="android:color">@color/grey_54</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayoutHintTextForJob">
        <item name="android:fontFamily">@font/linotte_semi_bold</item>
        <item name="android:color">@color/back_87</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="ActionBarTransparent" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/back_87</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">@dimen/distance_view_5</item>
        <item name="android:paddingLeft">@dimen/distance_view_5</item>
        <item name="android:text">@string/fb_button</item>
    </style>
    
    <style name="ApplyButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorRaiseButton</item>
    </style>

    <style name="RefuseButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/google_normal</item>
    </style>

    <style name="SaveButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/SaveButton</item>
    </style>

    <style name="RegisterButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorRaiseButton</item>
    </style>

    <style name="LocationButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorRaiseButton</item>
    </style>

    <style name="ManagementButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
