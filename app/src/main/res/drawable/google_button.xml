<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/google_press"/>
            <corners
                android:topLeftRadius="@dimen/background_corners"
                android:topRightRadius="@dimen/background_corners"
                android:bottomLeftRadius="@dimen/background_corners"
                android:bottomRightRadius="@dimen/background_corners"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/google_normal"/>
            <corners
                android:topLeftRadius="@dimen/background_corners"
                android:topRightRadius="@dimen/background_corners"
                android:bottomLeftRadius="@dimen/background_corners"
                android:bottomRightRadius="@dimen/background_corners"/>
        </shape>
    </item>
</selector>