<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/login_press"/>
            <stroke android:color="@color/white"
                android:width="@dimen/distance_view_2"/>
            <corners
                android:topRightRadius="@dimen/distance_view_5"
                android:topLeftRadius="@dimen/distance_view_5"
                android:bottomRightRadius="@dimen/distance_view_5"
                android:bottomLeftRadius="@dimen/distance_view_5"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/login_disable"/>
            <stroke android:color="@color/white"
                android:width="@dimen/distance_view_2"/>
            <corners
                android:topRightRadius="@dimen/distance_view_5"
                android:topLeftRadius="@dimen/distance_view_5"
                android:bottomRightRadius="@dimen/distance_view_5"
                android:bottomLeftRadius="@dimen/distance_view_5"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/login_normal"/>
            <stroke android:color="@color/white"
                android:width="@dimen/distance_view_2"/>
            <corners
                android:topRightRadius="@dimen/distance_view_5"
                android:topLeftRadius="@dimen/distance_view_5"
                android:bottomRightRadius="@dimen/distance_view_5"
                android:bottomLeftRadius="@dimen/distance_view_5"/>
        </shape>
    </item>
</selector>