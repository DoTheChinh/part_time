<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="ring"
            android:innerRadiusRatio="10"
            android:thicknessRatio="2.7"
            android:useLevel="false">

            <gradient
                android:endColor="@color/background_avatar_end"
                android:startColor="@color/background_avatar_start"
                android:gradientRadius="@dimen/distance_view_15"
                android:centerX="0.5"
                android:centerY="0.5"
                android:type="radial" />

            <size
                android:width="80dp"
                android:height="80dp" />

        </shape>
    </item>
</selector>