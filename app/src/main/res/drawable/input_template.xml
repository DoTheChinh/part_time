<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/distance_view_1"
                android:color="@color/green"/>
            <corners
                android:topLeftRadius="@dimen/distance_view_5"
                android:topRightRadius="@dimen/distance_view_5"
                android:bottomLeftRadius="@dimen/distance_view_5"
                android:bottomRightRadius="@dimen/distance_view_5"/>
            <solid android:color="@color/input_background"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/distance_view_1"
                android:color="@color/back_87"/>
            <corners
                android:topLeftRadius="@dimen/distance_view_5"
                android:topRightRadius="@dimen/distance_view_5"
                android:bottomLeftRadius="@dimen/distance_view_5"
                android:bottomRightRadius="@dimen/distance_view_5"/>
            <solid android:color="@color/input_background"/>
        </shape>
    </item>
</selector>